<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sivakrishna.firebaseapp.Activities.Signin">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editnames"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:layout_margin="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editpasswords"
        android:inputType="textPassword"
        android:hint="Enter password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/editnames"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonsignn"
        android:layout_below="@+id/editpasswords"
        android:layout_centerHorizontal="true"
        android:text="Login"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="                     Registerd? LogIn"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:id="@+id/text1"
        android:layout_below="@+id/buttonsignn"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
